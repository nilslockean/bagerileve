---
import type { Course as ICourse } from "@lib/schemas/CourseSchema";
import Course from "./Course.astro";
import type { EventScope } from "@lib/schemas/EventScope";

interface Props {
  courses: ICourse[];
  showEmpty: boolean;
  scope: EventScope;
}

const { courses, scope, showEmpty } = Astro.props;
const hasCourses = courses.length > 0;
const showTitle = hasCourses || (!hasCourses && showEmpty);

let title = "Kommande kurser";
if (scope === "past") {
  title = "Tidigare kurser";
} else if (scope === "all") {
  title = "Alla kurser";
}
---

{showTitle && <h2>{title}</h2>}
{
  hasCourses && (
    <div class="flex flex-1 gap-4 flex-wrap">
      {courses.map((course) => (
        <Course {course} class="mt-4 max-w-prose basis-2/4 grow" />
      ))}
    </div>
  )
}
{showEmpty && !hasCourses && <p>Inga kurser inplanerade just nu.</p>}
