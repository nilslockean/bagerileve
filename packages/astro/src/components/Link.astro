---
import { cn } from "@lib/cn";

type Props = {
  href: string;
  class?: string;
  current?: boolean;
};

const { href, current, class: className, ...rest } = Astro.props;
---

<a
  {...rest}
  {href}
  aria-current={current}
  class={cn("decoration-2 underline aria-current:no-underline", className)}
>
  <slot />
</a>
