---
import type { NavLink } from "@lib/types/NavLink";
import Link from "./Link.astro";
import { cn } from "@lib/cn";

type Props = {
  links: NavLink[];
  class?: string;
};

const { links, class: className } = Astro.props;
---

{
  links.map((link) => (
    <Link
      href={link.path}
      current={link.current}
      class={cn(link.className, className)}
    >
      {link.label}
    </Link>
  ))
}
