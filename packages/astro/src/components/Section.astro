---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section"> {
  fullwidth?: boolean;
}

const { fullwidth, class: className, ...rest } = Astro.props;
---

<section
  {...rest}
  class:list={[{ "p-6 max-w-screen-2xl mx-auto": !fullwidth }, className]}
>
  <slot />
</section>
